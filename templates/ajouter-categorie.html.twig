{% extends "base.html.twig" %}

{% block title %} Casu'Hall - Ajouter une catégorie {% endblock %}

{% block body %}
    <div class = "text-center"> 
        <h4 class = "p-2 mt-5 text-uppercase fw-bold"> Ajouter une catégorie </h4>
    </div>
    <div class="container d-flex align-items-center mb-4 mt-5">
        <div class="p-4 border border-black bg-light rounded mx-auto">
            {{ form_start(form) }}
                {{ form_widget(form.action) }}
                <div class="row mb-2">
                    {{ form_label(form.nomCategorie)}}
                    {{ form_widget(form.nomCategorie)}}
                </div> 
                <div class="row">
                    <div class="btn-group" role="group">
                        {{ form_widget(form.addCategorie) }} 
                        {{ form_widget(form.deleteCategorie) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

        {% for message in app.flashes('AddOrDeleteCategorie') %}
            <div class="container d-flex align-items-center text-center justify-content-center mb-2 mt-3">
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        {% for message in app.flashes('errorCategorie') %}
            <div class="container d-flex align-items-center text-center justify-content-center mb-2 mt-3">
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
{% endblock %}