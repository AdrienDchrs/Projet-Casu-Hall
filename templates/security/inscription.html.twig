{% extends "base/base.html.twig" %}

{% block title %} Casu'Hall - Inscription {% endblock %}

{% block body %}
     {% set alertTypes = {'success': 'success', 'warning': 'warning', 'error': 'danger'} %}
    {% for type, cssClass in alertTypes %}
        {% for message in app.flashes(type) %}
            <div class="container-fluid d-flex align-items-center text-center justify-content-center mb-2 mt-3">
                <div class="alert alert-dismissible alert-{{ cssClass }} text-center" data-alert>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="text-center"> 
        <h4 class="p-2 mt-3 text-uppercase fw-bold"> Inscription </h4>
    </div>
    <div class="container d-flex align-items-center mb-4 mt-3">
        <div class="p-4 border border-black bg-light rounded mx-auto shadow shadow-lg">
            {{ form_start(form) }}
                <div class="row mb-2">
                    <div class="mb-2 col-md-6 d-flex align-items-center">
                        <div class="me-3">
                            {{ form_label(form.civilite) }}
                        </div>
                        <div class="d-flex">
                            {% for child in form.civilite %}
                                <div class="form-check me-3">
                                    {{ form_widget(child, {attr: {class: 'form-check-input'}}) }}
                                    {{ form_label(child, null, {attr: {class: 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="mb-2 col-md-6 d-flex align-items-center">
                        <div class="me-3">
                            {{ form_label(form.dateNaissance) }}
                        </div>
                        <div>
                            <div class="d-flex">
                                {{ form_widget(form.dateNaissance.day, {attr: {class: 'p-2 border rounded me-1'}}) }}
                                {{ form_widget(form.dateNaissance.month, {attr: {class: 'p-2 border rounded me-1'}}) }}
                                {{ form_widget(form.dateNaissance.year, {attr: {class: 'p-2 border rounded'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-md-2 mt-2">
                        {{ form_label(form.prenomUtilisateur) }}
                    </div>
                    <div class="col-md-4"> 
                        {{ form_widget(form.prenomUtilisateur) }}
                    </div>
                    <div class="col-md-2 mt-2">
                        {{ form_label(form.nomUtilisateur) }}
                    </div>
                    <div class="col-md-4"> 
                        {{ form_widget(form.nomUtilisateur) }}
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-md-2">
                        {{ form_label(form.email) }}
                    </div>
                    <div class="col-md-4"> 
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <hr>
                <div class="row mb-2">
                    <div class="col-md-4">
                        {{ form_label(form.plainPassword.first) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.plainPassword.first) }}
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-md-4">
                        {{ form_label(form.plainPassword.second) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" onClick="afficherMotDePasse('inscription_plainPassword_first','inscription_plainPassword_second')">
                    <label class="form-check-label" for="flexCheckDefault"> Visualiser les mots de passe </label>
                </div>

                <div class="alert alert-warning d-flex align-items-center p-2 mt-2">
                    <div class="fst-italic small d-flex">
                        <p class="mb-0">Pour rappel, votre mot de passe doit contenir au moins</p>
                        <p class="fw-bold mb-0 ms-1">8 caractères, une majuscule, une minuscule, un chiffre et un caractère spécial.</p>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="btn-group w-75 d-flex mx-auto" role="group">
                        {{ form_widget(form.submit) }}
                        <a href="{{ path('security.connexion') }}" class="btn btn-outline-dark"> Déjà un compte ? Connectez-vous ici. </a>
                    </div>
                </div>  
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
