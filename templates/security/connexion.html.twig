{% extends "base/base.html.twig" %}

{% block title %} Casu'Hall - Connexion {% endblock %}

{% block body %}
    {% if errors %}
        <div class="container d-flex align-items-center text-center justify-content-center mb-2 mt-3">
            <div class="alert alert-dismissible alert-danger" data-alert>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                Adresse e-mail ou mot de passe incorrect !
            </div>
        </div>
    {% endif %}

    {% set alertTypes = {'success': 'success', 'warning': 'warning', 'error': 'danger'} %}
    {% for type, cssClass in alertTypes %}
        {% for message in app.flashes(type) %}
            <div class="container-fluid d-flex align-items-center text-center justify-content-center mb-2 mt-3">
                <div class="alert alert-dismissible alert-{{ cssClass }} text-center" data-alert>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="container-fluid d-flex mt-5 mb-5 align-items-center justify-content-center">
        <div class="row w-100 h-100 align-items-center">
            <!-- Vidéo gauche -->
            <div class="col-lg-4 d-none d-lg-flex justify-content-center">
                <video autoplay muted loop playsinline>
                    <source src="/assets/images/Video.mov" type="video/mp4">
                    Votre navigateur ne prend pas en charge la lecture des vidéos.
                </video>
            </div>

            <!-- Formulaire au centre -->
            <div class="col-lg-4 d-flex flex-column align-items-center">
                <div class="p-4 border border-black bg-light rounded shadow shadow-lg w-100" style="max-width: 400px;">
                    <h4 class="text-center p-2 mb-3 text-uppercase fw-bold">Connexion</h4>
                    <form action="{{ path('security.connexion') }}" method="POST">
                        <div class="mb-3">
                            <label for="username" class="fw-bold">Adresse e-mail :</label>
                            <input type="email" name="_username" id="username" class="form-control" placeholder="exemple@gmail.com" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="fw-bold">Mot de passe :</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="********" required>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="showPassword" onclick="afficherMotDePasse('_password','_password')">
                            <label class="form-check-label" for="showPassword">Visualiser le mot de passe</label>
                        </div>
                        <button type="submit" class="btn btn-outline-dark w-100">Se connecter</button>
                    </form>
                </div>

                <!-- Boutons sous le formulaire -->
                <div class="mt-4 text-center">
                    <a href="{{ path('security.inscription') }}" class="btn btn-outline-dark shadow shadow-lg mx-2" role="button">Créer votre compte ici</a>
                    <a href="{{ path('app_forgot_password_request') }}" class="btn btn-outline-dark shadow shadow-lg mx-2" role="button">Mot de passe oublié ?</a>
                </div>
            </div>

            <!-- Vidéo droite -->
            <div class="col-lg-4 d-none d-lg-flex justify-content-center">
                <video autoplay muted loop playsinline>
                    <source src="/assets/images/Video.mov" type="video/mp4">
                    Votre navigateur ne prend pas en charge la lecture des vidéos.
                </video>
            </div>
        </div>
    </div>

{% endblock %}
